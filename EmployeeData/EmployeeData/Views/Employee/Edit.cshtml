@model EmployeeData.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Edit Employee";
    var errorMessage = TempData["errorMessage"]?.ToString();
}
<div class="nav-item">
    <a class="btn btn-lg float-end btn-danger" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
</div>
<h3>@ViewData["Title"]</h3>
<hr/>

<form action="Edit" method="post">
    <div class="mb-3">
        <lable class="form-label">Id</lable>
        <input type="text" class="form-control" asp-for="Id" readonly />
        
    </div>
    <div class="mb-3">
        <lable class="form-label">First Name</lable>
        <input type="text" class="form-control" asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
      <div class="mb-3">
        <lable class="form-label">Last Name</lable>
        <input type="text" class="form-control" asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
            <lable class="form-label">Date of Birth</lable>
            <input type="date" class="form-control" asp-for="DateOfBirth" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <lable class="form-label">E-Mail</lable>
        <input type="text" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <lable class="form-label">Salary</lable>
        <div class="input-group">
            <span class="input-group-text">Rs</span>
            <input type="text" class="form-control" asp-for="Salary" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}